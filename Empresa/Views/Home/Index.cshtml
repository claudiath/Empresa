@{
    ViewData["Title"] = "Inicio";
}

@model IEnumerable<Empresa.Models.Product>

<div class="text-center">
    <h1 class="display-4">Hola</h1>
    <p>Para ver nuestro catálogo <a href="https://frutasmontijo.com/listado-de-productos/" target="_blank">haz clic aquí</a>.</p>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        @foreach (var item in Model)
        {

            <li data-target="#carouselExampleIndicators" data-slide-to="@{@item.Id}"></li>
}
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="~/Imagenes/Frutas.jpg" alt="First slide" style="height:350px; display:block; margin-left:auto;margin-right:auto">
        </div>

        @foreach (var item in Model)
        {
            <div class="carousel-item">

                <img src="@{ @Html.DisplayFor(modelItem => item.URL_Imagen)}" class="d-block" style="height:350px; display:block; margin-left:auto;margin-right:auto"/>
                @*<p class="text-center">@Html.DisplayFor(modelItem => item.Descripcion)</p>*@
            </div>}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>